.article {
	background-color: $article-bg-color;
	margin-top: 50px;
	
	.img-post,.post,.item {
		width: 550px;
		padding: 15px;
		margin: 10px;
		border-radius: 20px;
		transition: 0.6s all;
		&:hover {box-shadow: 0px 0px 15px $item-shadow-color;}

		a {border-bottom: 1px solid $article-a-color;}

		&>h2:first-child {
			font-size: 32px;
			color: $article-title-color;

			&>a {
				font-weight: 500;
				border-bottom: none;
			}
		}
	}

	.img-post,.post>p:last-child {
		color: $article-meta-color;
		font-size: 20px;
	}

	.img-post {
		background-size: cover;
		height: 300px;
	}

	.post-toc .title {
		font-size: 25px;
	}
}

.article,.container {
	display: flex;
	justify-content: space-around;
	flex-wrap: wrap;
}

.container {
	width: 580px;
}

@media screen and (max-width: $pc_pe_dividing_3) {
    .article .img-post,.post,.item {
    	width: 100% !important;
    	box-sizing: border-box;
    }
}