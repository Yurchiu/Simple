.paginator {
    padding: 150px 0;
    text-align: center;

    .page-number,.space,.prev,.next {
        padding: 15px;
        margin: 10px;
        background-color: $paginator-bg-color;
        color: $paginator-color;
    }

    .page-number:hover,.prev:hover,.next:hover {
        color: $paginator-hover-color;
        background-color: $paginator-hover-bg-color;
    }

    .current,.current:hover {
        color: $paginator-current-color;
        background-color: $paginator-current-bg-color;
    }
}

@media screen and (max-width: $pc_pe_dividing_3) {
    .paginator .page-number,.space,.prev,.next {
        padding: 7px !important;
        margin: 4px !important;
    }
}